{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Site{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('course_index') }}">Study-On</a>
            <a class="btn btn-outline-primary mx-3" type="submit" href="{{ path('app_profile') }}">Профиль</a>
                <div class="d-flex">
                    {% if is_granted('ROLE_USER') %}
                        <a class="btn btn-outline-primary mx-3" type="submit" href="{{ path('app_logout') }}">Выйти</a>
                    {% else %}
                        <a class="btn btn-outline-primary mx-3" type="submit" href="{{ path('app_login') }}">Войти</a>
                        <a class="btn btn-outline-primary mx-3" type="submit" href="{{ path('app_register') }}">Регистрация</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>
        {% block body %}{% endblock %}
            {{ encore_entry_script_tags('app') }}
        {% block javascripts %}{% endblock %}
    </body>
</html>
