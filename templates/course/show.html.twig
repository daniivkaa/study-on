{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ course.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a>

    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}

    {% for lesson in course.lesson %}
        <a href = "{{ path('lesson_show', {id : lesson.id}) }}">
            <div class="card bg-warning text-black mb-3">
                <div class="card-body">
                    <div>{{ lesson.number }}</div>
                    <br>
                    <div>{{ lesson.name }}</div>
                    <br>
                    <div>{{ lesson.content }}</div>
                </div>
            </div>
        </a>
    {% endfor %}
    <a href="{{ path('lesson_new', {'course': course.id}) }}">Добавить урок</a>

{% endblock %}
